<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- regular -->
    <font
        android:font="@font/azo_san"
        android:fontStyle="normal"
        android:fontWeight="400"

        app:font="@font/azo_san"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- italic -->
    <font
        android:font="@font/azo_sans_light"
        android:fontStyle="normal"
        android:fontWeight="400"

        app:font="@font/azo_sans_light"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- bold -->
    <font
        android:font="@font/azo_san_bold"
        android:fontStyle="normal"
        android:fontWeight="500"

        app:font="@font/azo_san_bold"
        app:fontStyle="normal"
        app:fontWeight="500" />

<!--    light-->

    <font
        android:font="@font/azo_sans_light"
        android:fontStyle="normal"
        android:fontWeight="400"

        app:font="@font/azo_san_bold"
        app:fontStyle="normal"
        app:fontWeight="400" />




</font-family>
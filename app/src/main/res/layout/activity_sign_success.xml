
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.deliveries.signcustomer.confirmsuccess.SignsuccessActivity">


    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.enyata.camdiary.ui.deliveries.signcustomer.confirmsuccess.SignsuccessViewModel" />
    </data>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="vertical"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.03"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/azo_san_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Successful"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.03"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/azo_san_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cheers, one in many more to come,\nlorem lorem lorem ipsum"
                    android:textSize="16sp"
                    android:layout_marginTop="22dp"
                    android:letterSpacing="0.03"
                    android:textColor="#000"
                    android:fontFamily="@font/azo_san"/>


                <Button
                    android:onClick="@{() -> viewModel.onHome()}"
                    android:id="@+id/home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dip"
                    android:layout_marginTop="60dip"
                    android:layout_gravity="center"
                    android:layout_marginRight="90dip"
                    android:background="@drawable/hover_button"
                    android:text="Home"
                    android:fontFamily="@font/azo_san_bold"
                    android:textAllCaps="false"
                    android:textColor="@drawable/changing_text"
                    android:textSize="14sp"
                    android:textStyle="bold" />






            </LinearLayout>










            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_submission_success" />








        </RelativeLayout>

    </LinearLayout>



</layout>
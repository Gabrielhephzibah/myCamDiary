<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_marginLeft="29dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:letterSpacing="0.03"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/azo_san_bold"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirmation"
                    android:letterSpacing="0.03"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/azo_san_bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:letterSpacing="0.03"
                    android:layout_marginTop="30dp"
                    android:textSize="9sp"
                    android:fontFamily="@font/azo_san"
                    android:textColor="@color/colorPrimary"
                    android:gravity="left"
                    />

                <TextView
                    android:id="@+id/firstName"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ore"
                    android:textSize="14sp"
                    android:letterSpacing="0.03"
                    android:textStyle="bold"
                    android:fontFamily="@font/azo_san_bold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="left"
                    />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:letterSpacing="0.03"
                    android:layout_marginTop="16dp"
                    android:textSize="9sp"
                    android:fontFamily="@font/azo_san"
                    android:textColor="@color/colorPrimary"
                    android:gravity="left"
                    />

                <TextView
                    android:id="@+id/lastName"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Somto"
                    android:textSize="14sp"
                    android:letterSpacing="0.03"
                    android:textStyle="bold"
                    android:fontFamily="@font/azo_san_bold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="left"
                    />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:letterSpacing="0.03"
                    android:layout_marginTop="16dp"
                    android:textSize="9sp"
                    android:fontFamily="@font/azo_san"
                    android:textColor="@color/colorPrimary"
                    android:gravity="left"
                    />

                <TextView
                    android:id="@+id/email"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="hskufd,hbal,@gmail.com"
                    android:textSize="14sp"
                    android:letterSpacing="0.03"
                    android:textStyle="bold"
                    android:fontFamily="@font/azo_san_bold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="left"
                    />




                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:letterSpacing="0.03"
                    android:layout_marginTop="16dp"
                    android:textSize="9sp"
                    android:fontFamily="@font/azo_san"
                    android:textColor="@color/colorPrimary"
                    android:gravity="left"
                    />

                <TextView
                    android:id="@+id/phoneNumber"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="08089654323"
                    android:textSize="14sp"
                    android:letterSpacing="0.03"
                    android:textStyle="bold"
                    android:fontFamily="@font/azo_san_bold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="left"
                    />


                <Button
                    android:onClick="@{() -> viewModel.onConfirm()}"
                    android:id="@+id/confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dip"
                    android:layout_marginTop="40dip"
                    android:layout_gravity="center"
                    android:layout_marginRight="100dip"
                    android:background="@drawable/bg_and_nobg_button"
                    android:text="Confirm"
                    android:fontFamily="@font/azo_san_bold"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <Button
                    android:onClick="@{() -> viewModel.onBack()}"
                    android:id="@+id/back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dip"
                    android:layout_marginTop="20dip"
                    android:layout_gravity="center"
                    android:layout_marginRight="100dip"
                    android:background="@drawable/bg_and_nobg_button"
                    android:text="Back"
                    android:fontFamily="@font/azo_san_bold"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />






            </LinearLayout>


        </LinearLayout>


</LinearLayout>
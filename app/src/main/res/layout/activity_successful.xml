
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.collections.statusofcollection.StatusOfCollectionActivity">


    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.enyata.camdiary.ui.collections.statusofcollection.StatusOfCollectionViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="29dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collection"
                android:letterSpacing="0.03"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/azo_san_bold"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Successful"
                android:letterSpacing="0.03"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:fontFamily="@font/azo_san_bold"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cheers, one in many more to come, \nlorem lorem lorem ipsum"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="6dp"
                android:lineSpacingMultiplier="1"
                android:layout_marginTop="22dp"
                android:textSize="16sp"
                android:fontFamily="@font/azo_san"
                android:textColor="#000"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Collected from"
                android:letterSpacing="0.03"
                android:layout_marginTop="22dp"
                android:textSize="7sp"
                android:fontFamily="@font/azo_san"
                android:textColor="@color/colorPrimary"
                android:gravity="left"
                />

            <TextView
                android:id="@+id/farmerName"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Akin, Solomon"
                android:textSize="20sp"
                android:letterSpacing="0.03"
                android:textStyle="bold"
                android:fontFamily="@font/azo_san_bold"
                android:textColor="@color/colorPrimary"
                android:gravity="left"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">
               <LinearLayout
                   android:id="@+id/volume"
                   android:layout_width="wrap_content"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="7sp"
                       android:fontFamily="@font/azo_san"
                       android:textColor="@color/colorPrimary"
                       android:letterSpacing="0.03"
                       android:text="Volume"/>

                   <TextView
                       android:layout_marginTop="3dp"
                       android:id="@+id/volumeText"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="10sp"
                       android:fontFamily="@font/azo_san"
                       android:textColor="@color/colorPrimary"
                       android:letterSpacing="0.03"
                       android:text="Churn ID"/>


               </LinearLayout>

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="7sp"
                        android:fontFamily="@font/azo_san"
                        android:textColor="@color/colorPrimary"
                        android:letterSpacing="0.03"
                        android:text="Churn ID"/>
                    <TextView
                        android:layout_marginTop="3dp"
                        android:id="@+id/churnId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:fontFamily="@font/azo_san"
                        android:textColor="@color/colorPrimary"
                        android:letterSpacing="0.03"
                        android:text="Churn ID"/>



                </LinearLayout>





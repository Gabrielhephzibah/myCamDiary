<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.collections.barcode.BarcodeActivity">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.enyata.camdiary.ui.collections.barcode.BarcodeViewModel" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_marginLeft="32dp">

        <ImageView
            android:onClick="@{() -> viewModel.onGoback()}"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_white_arrow"
            android:gravity="start" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan"
            android:letterSpacing="0.03"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/azo_sans_light"
            android:textColor="#fff"
            android:textSize="30sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barcode"
            android:letterSpacing="0.03"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/azo_sans_light"
            android:textColor="#fff"
            android:textSize="30sp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="51dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_code_scanner_img"
            />

        <Button
            android:id="@+id/scan"
            android:onClick="@{() -> viewModel.onScanCode()}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dip"
            android:layout_marginTop="51dip"
            android:layout_gravity="center"
            android:layout_marginRight="120dip"
            android:background="@drawable/scan_barcode_button"
            android:text="Scan"
            android:fontFamily="@font/azo_san_bold"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/enterFarmer_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Farmer ID"
            android:onClick="@{() -> viewModel.onEnterFarmerId()}"
            android:gravity="center"
            android:layout_marginTop="29dp"
            android:textSize="14sp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:fontFamily="@font/azo_san_bold"

            />



    </LinearLayout>


</LinearLayout>


</layout>
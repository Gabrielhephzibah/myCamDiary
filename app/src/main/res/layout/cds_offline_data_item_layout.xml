<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/parent"
        android:layout_marginTop="12sp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/white_bg_with_stroke"
        android:orientation="vertical">

        <RelativeLayout
            android:paddingTop="10dp"
           android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/azo_san"
                    android:text="Akin, Solomon"
                    android:textColor="#3D3D3D"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/phoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/azo_san"
                    android:gravity="center_horizontal"
                    android:text="+2347032457893"
                    android:textColor="#3D3D3D"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/azo_san"
                    android:gravity="right"
                    android:text="Female"
                    android:textColor="#3D3D3D"
                    android:textSize="11sp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="0dp"
                android:gravity="right"
                android:layout_marginRight="0dp"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent">


            <Button
                android:layout_marginRight="10dp"
                android:id="@+id/editBtn"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_with_two_radius"
                android:fontFamily="@font/azo_san"
                android:minHeight="35dp"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
                <Button
                    android:layout_toRightOf="@+id/editBtn"
                    android:id="@+id/deleteBtn"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_with_radius_white"
                    android:fontFamily="@font/azo_san"
                    android:minHeight="35dp"
                    android:text="Delete"
                    android:textAllCaps="false"
                    android:textColor="#4F4F4F"
                    android:textSize="10sp" />
            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.deliveries.deliveries_delivery.deliverysuccess.FinishActivity">


    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.enyata.camdiary.ui.deliveries.deliveries_delivery.deliverysuccess.FinishViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_marginLeft="29dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery"
                    android:letterSpacing="0.03"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/azo_san_bold"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Successful"
                    android:letterSpacing="0.03"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/azo_san_bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cheers, one in many more to come, \nlorem lorem lorem ipsum"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="6dp"
                    android:lineSpacingMultiplier="1"
                    android:layout_marginTop="22dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/azo_san"
                    android:textColor="#000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivered to"
                    android:letterSpacing="0.03"
                    android:layout_marginTop="14dp"
                    android:textSize="10sp"
                    android:fontFamily="@font/azo_san"
                    android:textColor="@color/colorPrimary"
                    android:gravity="left"
                    />

                <TextView
                    android:id="@+id/customerName"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="22sp"
                    android:letterSpacing="0.03"
                    android:textStyle="bold"
                    android:fontFamily="@font/azo_san_bold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="left"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bottles returned"
                    android:letterSpacing="0.03"
                    android:layout_marginTop="14dp"
                    android:textSize="10sp"
                    android:fontFamily="@font/azo_san"
                    android:textColor="@color/colorPrimary"
                    android:gravity="left"
                    />

                <TextView
                    android:id="@+id/bottles"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="22sp"
                    android:letterSpacing="0.03"
                    android:textStyle="bold"
                    android:fontFamily="@font/azo_san_bold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="left"
                    />


                <Button
                    android:onClick="@{() -> viewModel.onFinish()}"
                    android:id="@+id/finish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95dip"
                    android:layout_marginTop="37dip"
                    android:layout_gravity="center"
                    android:layout_marginRight="100dip"
                    android:background="@drawable/hover_button"
                    android:text="Finish"
                    android:fontFamily="@font/azo_san_bold"
                    android:textAllCaps="false"
                    android:textColor="@drawable/changing_text"
                    android:textSize="14sp"
                    android:textStyle="bold" />




            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"
                android:src="@drawable/delivery_white_cow" />

        </RelativeLayout>

    </LinearLayout>


</layout>
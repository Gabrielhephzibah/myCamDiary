<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/parentWrapper"
        android:background="@drawable/white_bg_with_radius"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/azo_san"
                        android:text="Churn ID"
                        android:textColor="#21523C"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/churnId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/azo_san"
                        android:text="X3478JND8992"
                        android:textColor="#787878"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/azo_san"
                        android:text="Volume"
                        android:textColor="#21523C"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/azo_san"
                        android:text="50 Litres"
                        android:textColor="#787878"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/viewMoreBtn"
                        android:layout_width="wrap_content"
                        android:text="@string/view_farmer"
                        android:textColor="#21523C"
                        android:textSize="10sp"
                        android:fontFamily="@font/azo_san"
                        android:layout_height="wrap_content"/>



<!--                    <Button-->
<!--                        android:id="@+id/viewMoreBtn"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:background="@drawable/collection_button"-->
<!--                        android:fontFamily="@font/azo_san"-->
<!--                        android:minHeight="35dp"-->
<!--                        android:text="View more"-->
<!--                        android:textAllCaps="false"-->
<!--                        android:textColor="#FFFFFF"-->
<!--                        android:textSize="10sp" />-->


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.deliveries.deliveries_delivery.details.DetailsActivity">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.enyata.camdiary.ui.deliveries.deliveries_delivery.details.DetailsViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="32dp">


                <ImageView
                    android:onClick="@{() -> viewModel.onBack()}"
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_green_arrow"
                    android:gravity="start" />

                <TextView
                    android:layout_marginTop="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deliveries"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp"
                    android:fontFamily="@font/azo_san"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="12sp"
                    android:fontFamily="@font/azo_san"
                    android:textColor="#CECECE"
                    android:layout_marginTop="13dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Devon Samuel"
                    android:textSize="12sp"
                    android:fontFamily="@font/azo_san_bold"
                    android:textStyle="bold"
                    android:textColor="@color/deliveryColor"
                    android:layout_marginTop="0dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="12sp"
                    android:fontFamily="@font/azo_san"
                    android:textColor="#CECECE"
                    android:layout_marginTop="20dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="17 Ozumba Mbadiwe, Victoria Island, Lagos"
                    android:textSize="12sp"
                    android:fontFamily="@font/azo_san_bold"
                    android:textStyle="bold"
                    android:textColor="@color/deliveryColor"
                    android:layout_marginTop="0dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone No."
                    android:textSize="12sp"
                    android:fontFamily="@font/azo_san"
                    android:textColor="#CECECE"
                    android:layout_marginTop="20dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+2348024456793"

                    android:textSize="12sp"
                    android:fontFamily="@font/azo_san_bold"
                    android:textColor="@color/deliveryColor"
                    android:layout_marginTop="0dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivery Instructions"
                    android:textSize="12sp"
                    android:fontFamily="@font/azo_san"
                    android:textColor="#CECECE"
                    android:layout_marginTop="20dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum lorem ipsum ipsum lorem ipsumipsum
lorem ipsumipsum lorem ipsumipsum lorem ipsum"
                    android:textSize="12sp"
                    android:fontFamily="@font/azo_san_bold"
                    android:textStyle="bold"
                    android:textColor="@color/deliveryColor"
                    android:layout_marginTop="0dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Items"
                    android:textSize="12sp"
                    android:fontFamily="@font/azo_san"
                    android:textColor="#CECECE"
                    android:layout_marginTop="20dp"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/items1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/azo_san_bold"
                        android:textStyle="bold"
                        android:textColor="@color/deliveryColor"
                        android:textSize="12sp"
                        android:text="Double Skimmed Milk.............................."/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/azo_san_bold"
                        android:textSize="12dp"
                        android:textColor="@color/deliveryColor"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/items1"
                        android:text="x1"/>



                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/items2"
                        android:textColor="@color/deliveryColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/azo_san_bold"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:text="Double Milk ............................................"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/azo_san_bold"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/deliveryColor"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/items2"
                        android:text="x3"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/azo_san_bold"
                        android:textStyle="bold"
                        android:textColor="@color/deliveryColor"
                        android:textSize="12sp"
                        android:text="Creamy Milk............................................"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/azo_san_bold"
                        android:textSize="12dp"
                        android:textColor="@color/deliveryColor"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/items"
                        android:text="x1"/>


                    <Button
                        android:onClick="@{() -> viewModel.onDeliver()}"
                        android:id="@+id/deliver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginRight="180dp"
                        android:background="@drawable/hover_button"
                        android:text="Deliver"
                        android:layout_marginTop="42dp"
                        android:fontFamily="@font/azo_san"
                        android:textAllCaps="false"
                        android:textColor="@drawable/changing_text"
                        android:textSize="14sp"
                        android:textStyle="bold" />






                </RelativeLayout>











            </LinearLayout>



            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/delivery_white_cow"
                />




        </RelativeLayout>


    </LinearLayout>


</layout>
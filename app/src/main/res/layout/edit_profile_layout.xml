<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="18dip"
                android:fontFamily="@font/azo_sans_light"
                android:gravity="center_vertical"
                android:lines="1"
                android:letterSpacing="-0.03"
                android:text="EDIT PROFILE"
                android:textColor="#21523C"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/circle"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cardCornerRadius="35dp"
                app:strokeWidth="1dp"
                android:layout_toLeftOf="@id/forgotPassword"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/userImage"
                    android:scaleType="fitXY"
                    android:layout_toLeftOf="@id/forgotPassword"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/farmer_ade"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/azo_san"
                android:letterSpacing="-0.03"
                android:textSize="11sp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance= "@style/MyAppearance"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="10dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp">

                <EditText
                    android:id="@+id/firstName"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="Answer"
                    android:textSize="14sp"
                    android:fontFamily="@font/azo_sans_light"
                    android:textColor="#21523C"
                    android:textCursorDrawable= "@null" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/azo_san"
                android:letterSpacing="-0.03"
                android:textSize="11sp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance= "@style/MyAppearance"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="10dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp">

                <EditText
                    android:id="@+id/lastName"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="Answer"
                    android:textSize="14sp"
                    android:fontFamily="@font/azo_sans_light"
                    android:textColor="#21523C"
                    android:textCursorDrawable= "@null" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="14dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/azo_san"
            android:letterSpacing="-0.03"
            android:textSize="11sp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance= "@style/MyAppearance"
            app:boxStrokeColor="@color/colorPrimary"
            app:boxStrokeWidth="10dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp">

            <EditText
                android:id="@+id/address"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Answer"
                android:textSize="14sp"
                android:fontFamily="@font/azo_sans_light"
                android:textColor="#21523C"
                android:textCursorDrawable= "@null" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="14dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/azo_san"
            android:letterSpacing="-0.03"
            android:textSize="11sp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance= "@style/MyAppearance"
            app:boxStrokeColor="@color/colorPrimary"
            app:boxStrokeWidth="10dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp">

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Answer"
                android:textSize="14sp"
                android:fontFamily="@font/azo_sans_light"
                android:textColor="#21523C"
                android:textCursorDrawable= "@null" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>





    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="90dip"
            android:layout_marginTop="20dip"
            android:layout_marginRight="90dip"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/submitEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/hover_button"
                android:text="Submit"
                android:fontFamily="@font/azo_san_bold"
                android:textAllCaps="false"
                android:textColor="@drawable/changing_text"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

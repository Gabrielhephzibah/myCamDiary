<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Volume"
            android:fontFamily="@font/azo_sans_light"
            android:textSize="22sp"
            android:textColor="#21523C"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance= "@style/MyAppearance"
            app:boxStrokeColor="@color/colorPrimary"
            app:boxStrokeWidth="10dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            android:layout_marginTop="28dip"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/aggregatorVolume"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Volume"
                android:fontFamily="@font/azo_sans_light"
                android:inputType="text"
                android:textColor="#21523C"
                android:textCursorDrawable= "@null" />

        </com.google.android.material.textfield.TextInputLayout>




        <FrameLayout
            android:id="@+id/spinner_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="23dp"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_marginTop="6dp"
                android:background="@drawable/spinner_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinner"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginTop="5dp"
                    android:spinnerMode="dropdown"
                    android:textColor = "@color/colorPrimary"
                    android:textSize="12sp" />
            </FrameLayout>

            <TextView
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:layout_marginTop="-3dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                android:textSize="14sp"
                android:text="Churn No"
                android:textColor="@color/colorPrimary"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="24dp">


            <TextView
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/azo_san"
                android:text="BACK"
                android:textStyle="bold"
                android:textSize="14dp"/>


            <TextView
                android:id="@+id/accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/back"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/azo_san"
                android:text="ACCEPT"
                android:textStyle="bold"
                android:textSize="14dp"/>


        </RelativeLayout>


    </LinearLayout>




</LinearLayout>
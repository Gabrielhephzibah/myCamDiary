<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.collections.rejection.newreason.NewReasonActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.enyata.camdiary.ui.collections.rejection.newreason.NewReasonViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:onClick="@{() -> viewModel.onBack()}"
                                android:src="@drawable/ic_green_arrow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="19dp"
                                android:fontFamily="@font/azo_san"
                                android:letterSpacing="0.03"
                                android:text="Reason for"
                                android:textColor="@color/colorPrimary"
                                android:textSize="30sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/azo_san"
                                android:letterSpacing="0.03"
                                android:text="Rejection"
                                android:textColor="@color/colorPrimary"
                                android:textSize="30sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="vertical">

                                <CheckBox
                                    android:id="@+id/checkbox1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/colorPrimary"
                                    android:fontFamily="@font/azo_san"
                                    android:onClick="onCheckboxClicked"
                                    android:text="Failed - Test 1"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12sp" />

                                <CheckBox
                                    android:id="@+id/checkbox2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="13dp"
                                    android:buttonTint="@color/colorPrimary"
                                    android:fontFamily="@font/azo_san"
                                    android:onClick="onCheckboxClicked"
                                    android:text="Failed - Test 2"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12sp" />

                                <CheckBox
                                    android:id="@+id/checkbox3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="13dp"
                                    android:buttonTint="@color/colorPrimary"
                                    android:fontFamily="@font/azo_san"
                                    android:onClick="onCheckboxClicked"
                                    android:text="Failed - Test 3"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12sp" />

                                <CheckBox
                                    android:id="@+id/checkbox4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="13dp"
                                    android:buttonTint="@color/colorPrimary"
                                    android:fontFamily="@font/azo_san"
                                    android:onClick="onCheckboxClicked"
                                    android:text="Unapproved Container"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="28dp"
                                android:layout_marginRight="29dp"
                                android:background="@drawable/text_area_background">

                                <EditText
                                    android:id="@+id/textarea"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:backgroundTint="#fff"
                                    android:gravity="top"
                                    android:hint="@string/hint"
                                    android:inputType="text|textMultiLine"
                                    android:textColor="@color/colorPrimary"
                                    android:textColorHint="@color/hint_color"
                                    android:textCursorDrawable="@null" />

                            </LinearLayout>

                            <Button
                                android:id="@+id/submit"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="25dip"
                                android:background="@drawable/hover_button"
                                android:fontFamily="@font/azo_san_bold"
                                android:onClick="@{() -> viewModel.onSubmit()}"
                                android:text="Submit"
                                android:textAllCaps="false"
                                android:textColor="@drawable/changing_text"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>
                </ScrollView>


                <RelativeLayout
                    android:id="@+id/down"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include
                        layout="@layout/transparent_cow_picture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                    </include>


                </RelativeLayout>


            </LinearLayout>

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/address_looking_up"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}" />


        </FrameLayout>

    </LinearLayout>

</layout>